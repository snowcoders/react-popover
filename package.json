{
  "name": "@snowcoders/react-popover",
  "version": "1.0.0",
  "keywords": [
    "Popover",
    "Menu",
    "Tooltip",
    "Select",
    "Accessibility"
  ],
  "private": false,
  "repository": "https://github.com/snowcoders/react-popover",
  "author": "Snowcoders",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build-scss && npm run build-typescript",
    "build-scss": "node-sass src/styles.scss dist/styles.css",
    "build-typescript": "tsc",
    "clean": "rimraf coverage dist",
    "cover": "nyc npm run test",
    "precommit": "lint-staged",
    "prepare": "npm run clean && npm run build",
    "test": "npm run jest",
    "jest": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "sortier",
      "git add"
    ]
  },
  "peerDependencies": {
    "@snowcoders/react-unstyled-button": ">=1.2.1",
    "classnames": ">=2.2.5",
    "react": ">=15.4.0",
    "react-dom": ">=15.4.0",
    "react-popper": ">=1.0.0",
    "react-resize-detector": ">=2.0.0",
    "tslib": ">=1.9.0"
  },
  "devDependencies": {
    "@snowcoders/react-unstyled-button": "~1.2.1",
    "@snowcoders/sortier": "^2.1.7",
    "@types/classnames": "^2.2.4",
    "@types/enzyme": "^3.1.11",
    "@types/enzyme-adapter-react-15": "^1.0.2",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^23.1.4",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-resize-detector": "^2.2.0",
    "classnames": "^2.2.6",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "husky": "^0.14.3",
    "jest": "^23.3.0",
    "jsdom": "^11.11.0",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.2",
    "prettier": "^1.13.7",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-popper": "^1.0.0",
    "react-resize-detector": ">=2.0.0",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.6",
    "ts-jest": "^23.0.0",
    "tslib": "^1.9.3",
    "typescript": "^2.9.2"
  }
}
